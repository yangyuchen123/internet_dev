<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project.module.agent.mapper.AgentMapper">

    <resultMap id="BaseResultMap" type="com.example.project.module.agent.entity.Agent">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="avatar" column="avatar"/>
        <result property="category" column="category"/>
        <result property="model" column="model"/>
        <result property="systemPrompt" column="system_prompt"/>
        <result property="temperature" column="temperature"/>
        <result property="maxTokens" column="max_tokens"/>
        <result property="isPublic" column="is_public"/>
        <result property="creatorId" column="creator_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAgentById" resultMap="BaseResultMap">
        SELECT * FROM agent WHERE id = #{id}
    </select>

    <select id="findAgentByName" resultMap="BaseResultMap">
        SELECT * FROM agent WHERE name = #{name}
    </select>

    <insert id="insertAgent" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO agent (name, description, avatar, category, model, system_prompt, temperature, max_tokens, is_public, creator_id)
        VALUES (#{name}, #{description}, #{avatar}, #{category}, #{model}, #{systemPrompt}, #{temperature}, #{maxTokens}, #{isPublic}, #{creatorId})
    </insert>

    <update id="updateAgent">
        UPDATE agent
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="category != null">category = #{category},</if>
            <if test="model != null">model = #{model},</if>
            <if test="systemPrompt != null">system_prompt = #{systemPrompt},</if>
            <if test="temperature != null">temperature = #{temperature},</if>
            <if test="maxTokens != null">max_tokens = #{maxTokens},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteAgentById">
        DELETE FROM agent WHERE id = #{id}
    </delete>

</mapper>
